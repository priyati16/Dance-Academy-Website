extends base.pug

block scripts
  script(src='/static/index.js')

block style
  style
      include ../static/style.css
      include ../static/contactstyle.css

block content
    div.container
      h1 Contact Us
      form(action="/contact" method="post" Class="myform")
        input(type="text",name="name",Class="myinput",placeholder="Enter Your Name")      
        input(type="phone",name="phone",Class="myinput",placeholder="Enter Your Phone")      
        input(type="email",name="email",Class="myinput",placeholder="Enter Your Email")      
        input(type="text",name="address",Class="myinput",placeholder="Enter Your Address")      
        input(type="text",name="describe",Class="myinput",placeholder="Write Your Message")
        button(Class="btn")
              | Submit      